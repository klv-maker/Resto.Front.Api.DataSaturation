<Window x:Class="Resto.Front.Api.DataSaturation.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resto.Front.Api.DataSaturation.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Normal"
        Title="SettingsWindow" Height="600" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0"
                 SelectedItem="{Binding SelectedAddress}"
                 ItemsSource="{Binding AddressViewModels}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBlock Text="{Binding Path=AddressNumber}"
                                   FontSize="24"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Margin="5,0,5,0"/>
                        <TextBox FontSize="25"
                                 Margin="0,0,5,0"
                                 VerticalAlignment="Stretch"
                                 MinWidth="350"
                                 HorizontalAlignment="Stretch"
                                 Text="{Binding Path=AddressApi}"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid Grid.Row="1" Margin="5,0,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Cancel"
                    HorizontalAlignment="Left"
                    Grid.Column="0"
                    Width="100"
                    Height="50"
                    FontSize="25"
                    FontWeight="Medium"
                    Background="Red"
                    Command="{Binding CancelCommand}"
                    VerticalAlignment="Center"/>
            <Button Content="-"
                    HorizontalAlignment="Right"
                    Grid.Column="1"
                    Width="50"
                    Height="50"
                    FontSize="25"
                    FontWeight="Medium"
                    Background="LightGray"
                    Command="{Binding RemoveCommand}"
                    VerticalAlignment="Center"/>
            <Button Content="+"
                    HorizontalAlignment="Right"
                    Grid.Column="2"
                    Width="50"
                    Height="50"
                    FontSize="25"
                    FontWeight="Medium"
                    Background="LightGray"
                    Command="{Binding AddCommand}"
                    VerticalAlignment="Center"/>
            <Button Content="Save"
                    Margin="10,0,0,0"
                    Grid.Column="3"
                    Width="100"
                    Height="50"
                    FontSize="25"
                    FontWeight="Medium"
                    Background="#32CD32"
                    Command="{Binding SaveCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
