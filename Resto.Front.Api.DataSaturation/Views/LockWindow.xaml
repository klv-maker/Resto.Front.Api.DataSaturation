<Window x:Class="Resto.Front.Api.DataSaturation.Views.LockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resto.Front.Api.DataSaturation.Views"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Topmost="True"
        WindowStyle="None"
        WindowState="Normal"
        Title="LockWindow" Height="450" Width="800">
    <Grid>
        <Image Source="{Binding Image}"
               Visibility="{Binding ImageVisible}" 
               Stretch="UniformToFill"/>
        <Image Visibility="{Binding GifVisible}"
               gif:ImageBehavior.AnimatedSource="{Binding Gif}"
               gif:ImageBehavior.RepeatBehavior="Forever" 
               Stretch="UniformToFill"/>
        <Viewbox Stretch="UniformToFill">
        <MediaElement Source="{Binding Video}"
                      Visibility="{Binding VideoVisible}">
            <i:Interaction.Behaviors>
                <local:MediaLoopBehavior/>
            </i:Interaction.Behaviors>
            </MediaElement>
        </Viewbox>
    </Grid>
</Window>
